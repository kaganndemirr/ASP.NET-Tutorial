@using EntityLayer.Concrete
@model List<Content>

@{
    Layout = null;
}

<!DOCTYPE html>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>İçerik</th>
        <th>İçerik Oluşturulma Tarihi</th>
        <th>Başlık</th>
        <th>Yazar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.ContentId</td>
            <td> @item.ContentValue</td>
            <td> @item.ContentTime</td>
            <td> @item.Heading.HeadingName</td>
            <td> @item.Writers.WriterName</td>
            <td><a href="/Content/DeleteContent/@item.ContentId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Heading/UpdateContent/@item.ContentId" class="btn btn-danger">Güncelle</a></td>
        </tr>

    }
</table>