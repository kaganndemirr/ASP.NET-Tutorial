@using EntityLayer.Concrete
@model List<Category>


@{
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kategori Adı</th>
        <th>Kategori Açıklaması</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.CategoryId</td>
            <td> @item.CategoryName</td>
            <td> @item.CategoryDescription</td>
            <td> @item.CategoryStatus</td>
            <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-danger">Güncelle</a></td>
        </tr> 
    } 
</table>

<td><a href="/Category/AddCategory/" class="btn btn-danger">Ekle</a></td>


